@model SessionCartDTO

<div class="modal-header">
    <h5 class="modal-title">Current Cart: @Model.ListName ?? "No Current Cart"</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    @if (Model != null && Model.ProduceItems.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Unit</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProduceItems)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Unit</td>
                        <td>$@item.Price</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-right"><strong>Total Price:</strong> $@Model.Price</div>
    }
    else
    {
        <p>No current cart found.</p>
    }
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>
