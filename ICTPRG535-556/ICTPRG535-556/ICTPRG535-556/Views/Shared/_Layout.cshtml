<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Shopping..</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ICTPRG535_556.styles.css" asp-append-version="true" />
</head>
<body class="light-mode">
    <header>
        <h1>Digital Shopping List</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/About">About Us</a></li>
                <li><a href="/Settings">Settings</a></li>
                <li><a href="/Login">Login</a></li>
                <li><a href="/Cart/Select">List History</a></li>
                <li>
                    <a href="javascript:void(0);" class="btn btn-primary" id="cartButton" style="color: white; padding: 5px 15px; border-radius: 5px;">
                        <span class="glyphicon glyphicon-shopping-cart"></span> Cart
                    </a>
                </li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            2024 - ICTPRG535-556
        </div>
    </footer>

    <!-- Modal for the cart -->
    <div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="cartModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cartModalLabel">Current Cart</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Cart items will be dynamically added here, example: -->
                    <p>Your cart is empty.</p> <!-- You can dynamically update this content from your controller -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $('#cartButton').on('click', function () {
            $.ajax({
                url: '@Url.Action("CurrentList", "Cart")', // Ensure correct action and controller
                type: 'GET',
                success: function (response) {
                    $('#modalContent').html(response); 
                    $('#cartModal').modal('show'); // Show the modal
                },
                error: function (xhr, status, error) {
                    console.error("Error: ", status, error);
                }
            });
        });

    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
